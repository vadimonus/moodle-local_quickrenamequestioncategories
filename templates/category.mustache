{{!
    @template qbank_quickrenamecategories/category

    This template renders the list item for each category.

    Example context (json):
    {
        "categoryid": "1",
        "contextid": "2",
        "categoryname": "Default for Miscellaneous",
        "haschildren": false,
        "children": []
    }
}}
<input type="text" value="{{categoryname}}" name="categoryname[{{contextid}}][{{categoryid}}]" size="80" maxlength="254">
{{#haschildren}}
    <ul>
        {{#children}}
            <li>
                {{> qbank_quickrenamecategories/category }}
            </li>
        {{/children}}
    </ul>
{{/haschildren}}
