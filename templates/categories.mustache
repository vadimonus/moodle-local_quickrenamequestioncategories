{{!
    @template qbank_quickrenamecategories/categories

    Template for displaying categories editing form.

    Example context (json):
    {
        "action": "https://example.com/post",
        "sesskey": "sesskey",
        "categories": [{
            "ctxlvl": "contextlevel70",
            "heading": "Question categories for 'Quiz: qz'",
            "items": [{
                "categoryid": "1",
                "contextid": "2",
                "categoryname": "Default for Miscellaneous",
                "haschildren": false,
                "children": [],
            }],
        }]
    }
}}
<form action="{{action}}" method="post" accept-charset="utf-8" autocomplete="off" class="mform">
    <input name="sesskey" value="{{sesskey}}" type="hidden" />
    {{#categories}}
        <div class="box py-3 boxwidthwide boxaligncenter generalbox questioncategories {{ctxlvl}}">
            <h3>{{heading}}</h3>
            <ul>
                {{#items}}
                    {{> qbank_quickrenamecategories/category }}
                {{/items}}
            </ul>
        </div>
    {{/categories}}
    <div class="fitem fitem_actionbuttons fitem_fgroup">
        <div class="felement fgroup">
            <button name="save" value="1" type="submit" class="btn btn-primary" id="id_submitbutton">{{#str}} savechanges {{/str}}</button>
            <button name="cancel" value="1" type="submit" class="btn btn-cancel" id="id_cancel">{{#str}} cancel {{/str}}</button>
        </div>
    </div>
</form>
